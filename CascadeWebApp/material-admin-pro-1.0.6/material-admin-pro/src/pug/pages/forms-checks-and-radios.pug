                            code.
                                <script type='text/plain'><mwc-switch></mwc-switch>
                                <mwc-switch checked></mwc-switch>

                                <mwc-switch disabled></mwc-switch>
                                <mwc-switch checked disabled></mwc-switch></script>
                        +slot('pug')
                            code.
                                <script type='text/plain'>mwc-switch
                                mwc-switch(checked)
                                
                                mwc-switch(disabled)
                                mwc-switch(checked, disabled)</script>

