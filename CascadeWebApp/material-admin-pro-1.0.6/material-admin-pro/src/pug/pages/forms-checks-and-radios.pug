                                .mb-4
                                    mwc-radio(name='myGroup', value='value1')
                                    mwc-radio(name='myGroup', value='value2', checked)
                                .mb-0
                                    mwc-radio(disabled, name='disabledGroup')
                                    mwc-radio(disabled, name='disabledGroup', checked)
                        +slot('html')
                            code.
                                <script type='text/plain'><mwc-radio name="myGroup" value="value1"></mwc-radio>
                                <mwc-radio name="myGroup" value="value2" checked></mwc-radio>

                                <mwc-radio disabled name="disabledGroup"></mwc-radio>
                                <mwc-radio disabled name="disabledGroup" checked></mwc-radio></script>
                        +slot('pug')
                            code.
                                <script type='text/plain'>mwc-radio(name='myGroup', value='value1')
                                mwc-radio(name='myGroup', value='value2', checked)

                                mwc-radio(disabled, name='disabledGroup')
                                mwc-radio(disabled, name='disabledGroup', checked)</script>

                    //- Divider
                    hr.my-5

