@using CascadeWebApp.Models

@code {
    [Parameter] public Batch? Batch { get; set; }
    [Parameter] public EventCallback OnClose { get; set; }
}

@if (Batch != null)
{
    <div class="modal-backdrop" @onclick="@(() => OnClose.InvokeAsync())"></div>
    <div class="modal-dialog">
        <div class="modal-body">
            <!-- Title field - Batch Number centered without label -->
            <div class="modal-title-container">
                <div class="modal-detail-title">@Batch.BatchNumber</div>
            </div>
            
            <div class="modal-details">
                <div class="modal-field-container">
                    <div class="modal-detail-field">
                        <div class="modal-detail-label">Status</div>
                        <div class="modal-detail-value">@Batch.Status</div>
                    </div>
                </div>
            </div>
            <!-- ...other fields as needed... -->
        </div>
    </div>
}