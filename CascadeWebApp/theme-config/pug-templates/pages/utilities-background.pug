//- * * * * * * * *
//- * * Layout  * *
//- * * * * * * * *

//- The page layout is set using the Pug `extends` directive
//- which points to a layout template. All of the layout options
//- are contained in src/pug/layouts.

extends ../layouts/dashboard.pug

//- * * * * * * * *
//- * * Config  * *
//- * * * * * * * *

//- These are page-level configuration options that should be
//- set for each page.

block config
    - var navPosition = 'nav-fixed'; // Use 'nav-fixed' or null
    - var pageTitle = 'Background'; // String. Enter the page title within a string

//- Declare the demo mixin used on this page
//- NOTE: Requires Prism.js
include mixins/demo.pug

//- * * * * * * * * * * * * * * * *
//- * * Top App Bar Navigation  * *
//- * * * * * * * * * * * * * * * *

//- Declare the `block top-app-bar` from the layout
//- Note: This is required when using the dashboard layout!

block top-app-bar

    //- Declare the top-app-bar mixin 
    include mixins/top-app-bar.pug
    //- Use the top-app-bar mixin
    +top-app-bar({
        topAppBarStyle: 'navbar-dark',
        topAppBarBg: 'bg-dark'
    })

//- * * * * * * * * * * * * *
//- * * Drawer Navigation * *
//- * * * * * * * * * * * * *

//- Declare the `block drawer` from the layout
//- Note: This is required when using the dashboard layout!

block drawer

    //- Declare the drawer mixin 
    include mixins/drawer.pug
    //- Use the drawer mixin
    +drawer({
        drawerStyle: 'drawer-light',
        drawerBg: null
    })

//- * * * * * * * * * * *
//- * * Page Content  * *
//- * * * * * * * * * * *

block content
    .container-xl.px-5
        .d-flex.mt-10.mb-4.align-items-center
            img.me-4(src='assets/img/icons/background.svg', alt='...', style='height: 48px;')
            h1.page-header.mb-0 Background
        .row.gx-5
            .col-lg-9
                p Background utilities are used to manipulate the appearance of the background of any element.

                //- Divider
                hr.my-5

                //- * * * * * * * * * * * * *
                //- * * Background color  * *
                //- * * * * * * * * * * * * *

                #color
                    h2.mb-4 Background Color
                    p
                        | Background color utilities follow the contextual classes defined in the color map and are named using the format
                        code.code-inline .bg-{color}
                        | where
                        em color
                        | is any color defined in the color map. A transparent option is also available.
                    p
                        | Background color utilities
                        strong do not set the text color
                        | of an element, so in some cases you will need to use
                        a(href='utilities-text.html') text utilities
                        | alongside a background color utility.
                    p.mb-4
                        | The demo below features elements with the various background color options that have been styled with padding and box shadow applied.

                    +demo({
                        id: 'backgroundColor'
                    })
                        +slot('demo')
                            .d-flex.border.border-top-0.px-3.pt-3.px-sm-4.pt-sm-4
                                .row.row-cols-1.row-cols-sm-2.row-cols-md-3.row-cols-lg-2.row-cols-xxl-3
                                    .col.mb-3.mb-sm-4
                                        .px-3.py-4.bg-primary.shadow-2.small
                                            code.text-white .bg-primary
                                    .col.mb-3.mb-sm-4
                                        .px-3.py-4.bg-secondary.shadow-2.small
                                            code.text-white .bg-secondary
                                    .col.mb-3.mb-sm-4
                                        .px-3.py-4.bg-success.shadow-2.small
                                            code.text-white .bg-success
                                    .col.mb-3.mb-sm-4
                                        .px-3.py-4.bg-danger.shadow-2.small
                                            code.text-white .bg-danger
                                    .col.mb-3.mb-sm-4
                                        .px-3.py-4.bg-warning.shadow-2.small
                                            code .bg-warning
                                    .col.mb-3.mb-sm-4
                                        .px-3.py-4.bg-info.shadow-2.small
                                            code.text-white .bg-info
                                    .col.mb-3.mb-sm-4
                                        .px-3.py-4.bg-light.shadow-2.small
                                            code .bg-light
                                    .col.mb-3.mb-sm-4
                                        .px-3.py-4.bg-white.shadow-2.small
                                            code .bg-white
                                    .col.mb-3.mb-sm-4
                                        .px-3.py-4.bg-dark.shadow-2.small
                                            code.text-white .bg-dark
                                    .col.mb-3.mb-sm-4
                                        .px-3.py-4.bg-black.shadow-2.small
                                            code.text-white .bg-black
                                    .col.mb-3.mb-sm-4
                                        .px-3.py-4.bg-transparent.shadow-2.small
                                            code .bg-transparent
                        +slot('html')
                            code.
                                <script type="text/plain"><div class="p-4 bg-primary text-white">.bg-primary</div>
                                <div class="p-4 bg-secondary text-white">.bg-secondary</div>
                                <div class="p-4 bg-success text-white">.bg-success</div>
                                <div class="p-4 bg-danger text-white">.bg-danger</div>
                                <div class="p-4 bg-warning">.bg-warning</div>
                                <div class="p-4 bg-info text-white">.bg-info</div>
                                <div class="p-4 bg-light">.bg-light</div>
                                <div class="p-4 bg-white">.bg-white</div>
                                <div class="p-4 bg-dark text-white">.bg-dark</div>
                                <div class="p-4 bg-black text-white">.bg-black</div>
                                <div class="p-4 bg-transparent">.bg-transparent</div></script>
                        +slot('pug')
                            code.
                                <script type="text/plain">.p-4.bg-primary.text-white .bg-primary
                                .p-4.bg-secondary.text-white .bg-secondary
                                .p-4.bg-success.text-white .bg-success
                                .p-4.bg-danger.text-white .bg-danger
                                .p-4.bg-warning .bg-warning
                                .p-4.bg-info.text-white .bg-info
                                .p-4.bg-light .bg-light
                                .p-4.bg-white .bg-white
                                .p-4.bg-dark.text-white .bg-dark
                                .p-4.bg-black.text-white .bg-black
                                .p-4.bg-transparent .bg-transparent</script>

                //- Divider
                hr.my-5

                //- * * * * * * * * * * * * * *
                //- * * Background gradient * *
                //- * * * * * * * * * * * * * *

                #gradient
                    h2.mb-4 Background Gradient
                    p.mb-4
                        | Background gradient utilities use the background image property to overlay a solid color with a semi-transparent gradient. Simply append any background utility with the
                        code.code-inline .bg-gradient
                        | class to acheive the gradient effect.

                    +demo({
                        id: 'backgroundGradient'
                    })
                        +slot('demo')
                            .d-flex.border.border-top-0.px-3.pt-3.px-sm-4.pt-sm-4
                                .row.row-cols-1.row-cols-sm-2.row-cols-md-3.row-cols-lg-2.row-cols-xxl-3
                                    .col.mb-3.mb-sm-4
                                        .px-3.py-4.bg-primary.bg-gradient.shadow-2.small
                                            code.text-white .bg-primary.bg-gradient
                                    .col.mb-3.mb-sm-4
                                        .px-3.py-4.bg-secondary.bg-gradient.shadow-2.small
                                            code.text-white .bg-secondary.bg-gradient
                                    .col.mb-3.mb-sm-4
                                        .px-3.py-4.bg-success.bg-gradient.shadow-2.small
                                            code.text-white .bg-success.bg-gradient
                                    .col.mb-3.mb-sm-4
                                        .px-3.py-4.bg-danger.bg-gradient.shadow-2.small
                                            code.text-white .bg-danger.bg-gradient
                                    .col.mb-3.mb-sm-4
                                        .px-3.py-4.bg-warning.bg-gradient.shadow-2.small
                                            code .bg-warning.bg-gradient
                                    .col.mb-3.mb-sm-4
                                        .px-3.py-4.bg-info.bg-gradient.shadow-2.small
                                            code.text-white .bg-info.bg-gradient
                                    .col.mb-3.mb-sm-4
                                        .px-3.py-4.bg-light.bg-gradient.shadow-2.small
                                            code .bg-light.bg-gradient
                                    .col.mb-3.mb-sm-4
                                        .px-3.py-4.bg-dark.bg-gradient.shadow-2.small
                                            code.text-white .bg-dark.bg-gradient
                        +slot('html')
                            code.
                                <script type="text/plain"><div class="p-4 bg-primary bg-gradient text-white">.bg-primary .bg-gradient</div>
                                <div class="p-4 bg-secondary bg-gradient text-white">.bg-secondary b.g-gradient</div>
                                <div class="p-4 bg-success bg-gradient text-white">.bg-success .bg-gradient</div>
                                <div class="p-4 bg-danger bg-gradient text-white">.bg-danger .bg-gradient</div>
                                <div class="p-4 bg-warning bg-gradient">.bg-warning .bg-gradient</div>
                                <div class="p-4 bg-info bg-gradient text-white">.bg-info .bg-gradient</div>
                                <div class="p-4 bg-light bg-gradient">.bg-light .bg-gradient</div>
                                <div class="p-4 bg-white bg-gradient">.bg-white .bg-gradient</div>
                                <div class="p-4 bg-dark bg-gradient text-white">.bg-dark .bg-gradient</div>
                                <div class="p-4 bg-black bg-gradient text-white">.bg-black .bg-gradient</div>
                                <div class="p-4 bg-transparent bg-gradient">.bg-transparent .bg-gradient</div></script>
                        +slot('pug')
                            code.
                                <script type="text/plain">.p-4.bg-primary.bg-gradient.text-white .bg-primary.bg-gradient
                                .p-4.bg-secondary.bg-gradient.text-white .bg-secondary.bg-gradient
                                .p-4.bg-success.bg-gradient.text-white .bg-success.bg-gradient
                                .p-4.bg-danger.bg-gradient.text-white .bg-danger.bg-gradient
                                .p-4.bg-warning.bg-gradient .bg-warning.bg-gradient
                                .p-4.bg-info.bg-gradient.text-white .bg-info.bg-gradient
                                .p-4.bg-light.bg-gradient .bg-light.bg-gradient
                                .p-4.bg-white.bg-gradient .bg-white.bg-gradient
                                .p-4.bg-dark.bg-gradient.text-white .bg-dark.bg-gradient
                                .p-4.bg-black.bg-gradient.text-white .bg-black.bg-gradient
                                .p-4.bg-transparent.bg-gradient .bg-transparent.bg-gradient</script>

                    //- Divider
                    hr.my-5

                //- * * * * * * * * * * * * * *
                //- * * Background pattern  * *
                //- * * * * * * * * * * * * * *

                #pattern
                    h2.mb-4 Background Pattern
                    p.mb-4
                        | Two options for stylish background patterns have been included with Material Admin Pro. The 'Doubs' and 'Waihou' patterns from
                        a(href='https://products.ls.graphics/paaatterns/', target='_blank') Paaatterns
                        | have be written as utility classes to include these designs.

                    +demo({
                        id: 'backgroundPatterns'
                    })
                        +slot('demo')
                            .border.border-top-0.p-3.p-sm-4
                                .px-3.py-10.bg-pattern-doubs.shadow-2.small.text-center.mb-3.mb-sm-4
                                    code.text-white .bg-pattern-doubs
                                .px-3.py-10.bg-pattern-waihou.shadow-2.small.text-center
                                    code .bg-pattern-waihou
                        +slot('html')
                            code.
                                <script type="text/plain"><div class="p-4 bg-pattern-doubs text-white">.bg-pattern-doubs</div>
                                <div class="p-4 bg-pattern-waihou text-white">.bg-pattern-waihou</div></script>
                        +slot('pug')
                            code.
                                <script type="text/plain">.p-4.bg-pattern-doubs.text-white .bg-pattern-doubs
                                .p-4.bg-pattern-waihou .bg-pattern-waihou</script>

                    //- Divider
                    hr.my-5

                //- Related Links
                h3.overline Related Links
                .row
                    .col-md-4.col-lg-6.col-xxl-4.mb-4.mb-md-0
                        .card.card-quick-link.card-raised.ripple-gray
                            .card-body
                                img.card-quick-link-img(src='assets/img/icons/text.svg')
                                .card-title.text-truncate.mb-2 Text Utilities
                                p.card-text Material Admin Pro text utilities
                            .card-actions
                                a.card-link.text-muted.text-decoration-none.stretched-link(href='utilities-text.html', title='Text Utilities') Related Link
                                i.material-icons.text-muted.rotate-45 arrow_upward
                    .col-md-4.col-lg-6.col-xxl-4
                        .card.card-quick-link.card-raised.ripple-gray
                            .card-body
                                img.card-quick-link-img(src='assets/img/brands/bootstrap.svg')
                                .card-title.text-truncate.mb-2 Bootstrap Color Utilities Documentation
                                p.card-text Bootstrap's color utilities
                            .card-actions
                                a.card-link.text-muted.text-decoration-none.stretched-link(href='https://getbootstrap.com/docs/5.2/utilities/colors/#background-color', target='_blank', title='Bootstrap Color Utilities Documentation') Related Link
                                i.material-icons.text-muted.rotate-45 arrow_upward

                //- Spacer
                .mb-5

            .col-lg-3.mb-5.mb-lg-0
                .sticky-top.nav-stick
                    .nav-heading
                        | Contents
                    ul.nav.flex-column#navStick
                        li.nav-item
                            a.nav-link(href='#color') Background Color
                        li.nav-item
                            a.nav-link(href='#gradient') Background Gradient
                        li.nav-item
                            a.nav-link(href='#pattern') Background Pattern

