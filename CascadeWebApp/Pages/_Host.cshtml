@page "/"
@namespace CascadeWebApp.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    
    <!-- Google Fonts - Roboto and Roboto Mono -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Roboto+Mono:400,500" rel="stylesheet">
    
    <!-- Google Material Icons -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Material Admin Pro Theme CSS -->
    <link href="css/material-theme.css" rel="stylesheet">
    
    <!-- Original application styles -->
    <link href="app.css" rel="stylesheet" />
    <link href="CascadeWebApp.styles.css" rel="stylesheet" />
    
    <title>Cascade Web App</title>
</head>
<body class="material-theme">
    <app>
        <component type="typeof(App)" render-mode="ServerPrerendered" />
    </app>

    <!-- Bootstrap JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- Theme JavaScript -->
    <script src="theme/js/scripts.js"></script>
    
    <!-- Blazor Server Script -->
    <script src="_framework/blazor.server.js"></script>
</body>
</html>