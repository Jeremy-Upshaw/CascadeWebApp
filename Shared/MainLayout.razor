@inherits LayoutComponentBase

<MudThemeProvider>
    <MudLayout>
        <MudDrawer Open="true" ClipMode="DrawerClipMode.Always" Elevation="1" Variant="DrawerVariant.Mini" Class="mud-theme-dark">
            <NavMenu />
        </MudDrawer>
        <MudMainContent Class="mud-theme-dark" Style="background-color:#222;">
            <MudAppBar Color="Color.Primary" Elevation="4">
                <MudText Typo="Typo.h6">Cascade Web App</MudText>
            </MudAppBar>
            <MudContainer MaxWidth="false">
                @Body
            </MudContainer>
        </MudMainContent>
    </MudLayout>
</MudThemeProvider>
